<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{offer.image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{offer.name}}</h1>
            <h3 id="payment">Payment method: {{offer.paymentMethod}}</h3>
            <p id="price"><span>Price: ${{offer.price}}</span></p>
            <p id="description">{{offer.description}}</p>
        </div>
        <div class="product-btn">
            {{#if isAuthenticated}}
            {{#if isOwner}}
            <div class="author">
                <a href="/crypto/{{offer._id}}/edit" class="btn-edit">Edit</a>
                <a href="/crypto/{{offer._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else}}
                {{#if hasBought}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                <a href="/crypto/{{offer._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>